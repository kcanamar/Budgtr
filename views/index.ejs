<%- include('./partials/head.ejs') %>
<div class="container">
    <h1>Budget All</h1>
    <a href="/budgets/new"><button>NEW ITEM</button></a>
    <table>
        <tr>
           <th>Date</th><th>Name</th><th>Amount</th>
        </tr>
     
        <% for (let budget in budgets) { %>
         <tr>
           <td><%= budgets[budget].date %></td>
           <td><a href="/budgets/<%=budget%>"><%= budgets[budget].name %></a></td>
           <td><%= budgets[budget].amount %></td>
         </tr>    
        <% } %>
     </table>
</div>